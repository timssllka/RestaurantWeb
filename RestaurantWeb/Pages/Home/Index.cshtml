@page
@model RestaurantWeb.Pages.Home.IndexModel
@{
    Layout = "_Layout"; // Указывает на макет
    ViewData["Title"] = "Главная";
}
<h2>@Model.Roles</h2>

<div class="row min-vh-100">
    <!-- Левая панель с кнопками (20%) -->
    <div class="col-md-2 bg-gradient sidebar">
        <div class="d-flex flex-column p-3">
            <!-- Основные кнопки -->
            <a href="/" class="btn btn-sidebar mb-3 active">Главная</a>
            <a href="/breakfast" class="btn btn-sidebar mb-3">Завтрак</a>
            <a href="/lunch" class="btn btn-sidebar mb-3">Обед</a>
            <a href="/diner" class="btn btn-sidebar mb-3">Ужин</a>
            <a href="/about" class="btn btn-sidebar mb-3">О кафе</a>
            <a href="/contacts" class="btn btn-sidebar mb-3">Контакты</a>


            <!-- Соцсети -->
            <div class="mt-5 social-icons">
                <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                <a href="#" class="social-icon"><i class="bi bi-telegram"></i></a>
            </div>
        </div>
    </div>

    <!-- Центральная часть (60%) -->
    <div class="col-md-6 main-content p-4">
        <!-- Слайдер с блюдом -->
        <div class="hero-slider mb-4">
            <img src="~/images/slide-01.jpg" class="img-fluid rounded" id="hero-image">
        </div>

        <!-- Две панели с блюдами -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="dish-card p-3 bg-orange rounded">
                    <img src="~/images/dish-01.jpg" class="img-fluid mb-2">
                    <h4>Сырный суп</h4>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dish-card p-3 bg-green rounded">
                    <img src="~/images/dish-02.jpg" class="img-fluid mb-2">
                    <h4>Стейк с овощами</h4>
                </div>
            </div>
        </div>

        <!-- Время работы -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="info-block p-3 bg-blue rounded">
                    <h4><i class="bi bi-clock"></i> Время работы:</h4>
                    <p>Пн-Пт: 9:00–23:00<br>Сб-Вс: 10:00–24:00</p>
                </div>
            </div>
        </div>

        <!-- Связь с сотрудниками -->
        <div class="row">
            <div class="col-12">
                <div class="info-block p-3 bg-purple rounded">
                    <h4><i class="bi bi-headset"></i> Свяжитесь с нами:</h4>
                    <button class="btn btn-light">Написать в WhatsApp</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Правый пустой столбец (20%) -->
    <div class="col-md-4 right-sidebar">
        <!-- Можно добавить декоративные элементы или оставить пустым -->
        <div class="decoration-element mt-5">
            <i class="bi bi-egg-fried" style="font-size: 2rem; color: var(--peach);"></i>
        </div>
    </div>
</div>